/* pages/recommendSong/recommendSong.wxss */
/* 头部样式设置 */
.recommendSongContainer .header{
  width: 100%;
  height: 300rpx;
}
.recommendSongContainer .header image{
  width: 100%;
  height: 300rpx;
}
.recommendSongContainer .header{
  position: relative;
}
.header .date{
  position: absolute;
  width: 300rpx;
  height: 100rpx;
  top:50%;
  left:50%;
  margin-left: -140rpx;
  margin-top: -40rpx;
  /* border:1px solid red; */
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
}

/* 列表区域样式设置 */
.ListContainer{
  position: relative;
  padding: 0 15rpx;
  border-radius: 30rpx;
  background-color: #fff;
  top:-20rpx;
}
.ListContainer .listHeader{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}

/* 内容区设置 */
.listScroll{
  height: calc(100vh - 380rpx);
}
.listScroll .listItem{
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}
.listScroll .listItem image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.listItem .itemContent{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  line-height: 40rpx;
}
.listItem .itemContent text{
  max-width: 350rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.listScroll .iconfont{
  position: absolute;
  line-height: 80rpx;
  right:0;
  width: 80rpx;
  height: 80rpx;
  text-align: right;
}
