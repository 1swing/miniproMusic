/* pages/toplist/toplist.wxss */
page{
  padding:5rpx 15rpx;
}
.headTitle{
  font-weight:550;
  font-size: 32rpx;
  margin-bottom: 15rpx;
}
.toplistRecommend{
  display: flex;
  margin-bottom: 20rpx;
}
.recommendItem{
  display: flex;
  flex-direction: column;
}
.imageContainer{
  position: relative;
  width: 235rpx;
  height: 235rpx;
  margin-right: 10rpx;
}
.imageContainer image{
  width: 235rpx;
  height: 235rpx;
  border-radius: 8rpx;
}
.topName{
  font-size: 24rpx;
  margin-top: 8rpx;
}
/* 内容区样式设置 */
.scrollItem{
  display: flex;
  margin-bottom: 20rpx;
  align-items: center;
}
.leftContainer{
  width: 245rpx;
  height: 245rpx;
  position: relative;
}
.imgText{
  position: absolute;
  left: 10rpx;
  bottom: 10rpx;
  font-size: 25rpx;
  color: #eee;
}
.leftContainer .cover{
  width: 245rpx;
  height: 245rpx;
  border-radius: 12rpx;
}
.contentContainer{
  display: flex;
  flex-direction: column;
  flex:1;
  margin-left: 20rpx;
}
.scrollItem .content{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
}
.scrollItem .content text{
  color: #696969;
  height: 60rpx;
  line-height: 30rpx;
  font-size: 26rpx;
  font-weight: 400;
  letter-spacing: 3rpx;
  /* border: 2rpx solid red; */
  max-width: 350rpx; 
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}